% Guard functions for recursive tex:
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\usepackage{currfile}
\newcommand{\guardNameSurfex}{ GUARD}

\newcommand{\defineGuard}[1]{%
  \expandafter\def\csname #1\string \guardNameSurfex\endcsname{}
}

\newcommand{\checkGuard}[1]{%
  \ifcsname #1\string \guardNameSurfex\endcsname
    \endinput
  \fi
}

\newcommand{\guard}{
  \checkGuard{\currfilepath}
  \defineGuard{\currfilepath}
}
